{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: GCC debug build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/wxCAN-Sniffer",
                "`/usr/local/bin/wx-config",
                "--cxxflags",
                "--libs`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: GCC release build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-O3",
                "-s",
                "-DNDEBUG",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/wxCAN-Sniffer",
                "`/usr/local/bin/wx-config",
                "--cxxflags",
                "--libs`"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}